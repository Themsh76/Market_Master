class Character {
    constructor(name, levelRequired, imagePath) {
        
        this.name = name; //Name vom Charakter
        this.levelRequired = levelRequired; //Benötigtes Level
        this.imagePath = imagePath; //Path wo die Datei des Characters liegt
        
    }

    
}

const character1 = new Character('Masjamin', 1, './Assets/Sprites/NPCs/Main-Character-1.png'); //Main Character bekommt Namen-Mix aus allen Projektmitgliedern 
const character2 = new Character('Dr.Schmied', 10, './Assets/Sprites/NPCs/NPC-WerksattSchmiede.png'); //Charakter 2 bekommt Namen
const character3 = new Character('Dr.Dorfmeister', 15, './Assets/Sprites/NPCs/NPC Bewohner.png'); //Charakter 3 bekommt Namen
const character4 = new Character('Dr.Tier', 30, './Assets/Sprites/NPCs/NPC-Tier(musste sein).png');//Charakter 4 bekommt Namen

class Player {
    constructor(level) {
        this.level = level;
    }

    selectCharacter(character) {
        if (this.level >= character.levelRequired) {
            this.character = character;
        } else {
           throw new Error(`You need to be at least level ${character.levelRequired} to select this character.`);
        }
    }

    showAvailableCharacters(characters) {
        console.log('Available characters:');
        characters.forEach(character => {
            if (this.level >= character.levelRequired) {
                console.log(character.name);
            }
        });
    }
}

const characters = new Map();
characters.set(character1.name, character1);
characters.set(character2.name, character2);
characters.set(character3.name, character3);
characters.set(character4.name, character4); //Liste der Charactere wird characters zugeordnet

let player = new Player(5);
player.showAvailableCharacters(characters); //Alle verfügbaren Characters
